@model IEnumerable<Inspinia_MVC5.Models.EditUserViewModel>

@{
    ViewBag.Title = "Todos";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Usuarios</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Lista</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Usuarios</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Agregar Nuevo Usuario", "Register", null, new { @class = "btn btn-primary btn-xs", id = "btnAgregaNuevoUsuario", name = "btnAgregaNuevoUsuario" })
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>

                            <th>
                                Apellidos y Nombres
                            </th>
                        
                           
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ApellidoPaterno) @Html.DisplayFor(modelItem => item.ApellidoMaterno) @Html.DisplayFor(modelItem => item.Nombres)
                                </td>
                               
                              
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.UserName }, new { @class = "btn btn-white btn-sm", id = "btnEditarUsuario", name = "btnEditarUsuario" }) 
                                    @Html.ActionLink("Roles", "UserRoles", new { id = item.UserName }, new { @class = "btn btn-white btn-sm", id = "btnRolesUsuario", name = "btnRolesUsuario" }) 
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.UserName }, new { @class = "btn btn-primary btn-sm", id = "btnEliminarUsuario", name = "btnEliminarUsuario" })
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
