<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-title">
                    <h5>Criterio de Busqueda Por DNI</h5>

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        @*<a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="#">Config option 1</a>
                                </li>
                                <li>
                                    <a href="#">Config option 2</a>
                                </li>
                            </ul>*@
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">

                    @using (Html.BeginForm("SearchTareoColaboradoresXDNI", "Reportes", FormMethod.Get, htmlAttributes: new { role = "form", id = "form" }))
                    {
                        <div class="form-horizontal">


                            <div class="form-group">
                                @Html.Label("DNI:", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBox("COD_Colaborador", null, new { @class = "form-control", maxlength = "8", onkeypress = "return justNumbers(event);", placeholder = "Ingrese el Número de DNI" })

                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Año:", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBox("COD_Year", null, new { @class = "form-control", maxlength = "4", onkeypress = "return justNumbers(event);", placeholder = "Ingrese el Año" })

                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("MES:", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBox("COD_Mes", null, new { @class = "form-control", maxlength = "2", onkeypress = "return justNumbers(event);", placeholder = "Ingrese el Número del mes" })

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" id="btnBuscar" value="Buscar Colaborador" class="btn btn-primary" />

                                </div>
                            </div>

                        </div>
                    }


                </div>



            </div>
        </div>
    </div>
    <div class="row">
        <div id="ImprimirReportRegistroControlDeAsistenciasXDNI" class="col-md-6">

        </div>
    </div>

    <iframe src="@Url.Action("ImprimirReportTareoColaboradoresXDNI", "Reportes", new {COD_Colaborador = ViewBag.COD_Colaborador, COD_Mes = ViewBag.COD_Mes,  COD_Year = ViewBag.COD_Year })" width="100%" height="1000" frameborder="0"></iframe>


    @section Scripts {

        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/plugins/validate")

        <script type="text/javascript">
        $(document).ready(function () {

            $("#form").validate({
                rules: {
                    password: {
                        required: true,
                        minlength: 3
                    },
                    url: {
                        required: true,
                        url: true
                    },
                    number: {
                        required: true,
                        number: true
                    },
                    COD_Colaborador: {
                        required: true,
                        minlength: 8
                    },
                    max: {
                        required: true,
                        maxlength: 4
                    }
                }
            });

        });
        </script>



    }

    <script>

        function justNumbers(e) {
            var keynum = window.event ? window.event.keyCode : e.which;
            if ((keynum == 8) || (keynum == 46))
                return true;

            return /\d/.test(String.fromCharCode(keynum));
        }
    </script>
