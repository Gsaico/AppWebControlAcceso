@model IEnumerable<Inspinia_MVC5.Models.RegistrosDiarios>

<div class="ibox float-e-margins">

    <div class="ibox-content">

        <div>
            <div class="chat-activity-list">

              

               @foreach (var item in Model)
               {
                <div class="chat-element">
                    <a href="#" class="pull-left">
                        <img width="100" height="100" alt="image" class="img-circle" src="@Url.Action("ConvertirAImagen", "RegistrosDiariosHUS001", new {COD_Colaborador = item.COD_Colaborador})" >


                    </a>
                    <div class="media-body ">
                        <small class="pull-right text-navy"> <label id="ESTADOINGRESOSALIDA"></label></small>

                        <strong>Apellidos Y Nombres: </strong> @Html.DisplayFor(modelItem => item.Colaboradores.ApellidoPaterno) @Html.DisplayFor(modelItem => item.Colaboradores.ApellidoMaterno) @Html.DisplayFor(modelItem => item.Colaboradores.Nombres)
                        <p></p>
                        <strong>DNI: </strong>@Html.DisplayFor(modelItem => item.Colaboradores.COD_Colaborador)
                        <p></p>
                        <small class="text-muted">Fecha y Hora: @Html.DisplayFor(modelItem => item.Fecha)</small>
                    </div>
                </div>

               }

            </div>
        </div>

    </div>
</div>

<script>


    if ("@(ViewBag.ingresosalida)" == "INGRESO") {

        document.getElementById("ESTADOINGRESOSALIDA").textContent = "@(ViewBag.ingresosalida)";

    }

    else if ("@(ViewBag.ingresosalida)" == "SALIDA") {

       document.getElementById("ESTADOINGRESOSALIDA").textContent = "@(ViewBag.ingresosalida)";


    }



</script>




